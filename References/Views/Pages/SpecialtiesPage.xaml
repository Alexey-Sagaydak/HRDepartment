<Page x:Class="References.SpecialtiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:References"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpecialtiesPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="textBlock" Text="Специальности" FontSize="40" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DataGrid Grid.Row="1" SelectedItem="{Binding SelectedSpecialization}" ItemsSource="{Binding Specializations}" AutoGenerateColumns="True" />
        <Button Grid.Row="2" Content="Добавить" Command="{Binding AddSpecializationCommand}" />
        <Button Grid.Row="3" Content="Удалить" Command="{Binding DeleteSpecializationCommand}" />
    </Grid>
</Page>
